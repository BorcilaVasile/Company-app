<UserControl x:Class="Administrare_firma.MVVM.View.EmployeeEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Administrare_firma.MVVM.ViewModel"
             xmlns:local="clr-namespace:Administrare_firma.MVVM.View" 
             xmlns:viewmodel="clr-namespace:Administrare_firma.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewModel:EmployeeEditViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <Grid>
        <ScrollViewer Style="{StaticResource ScrollViewerLayout}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource BorderLayout}">
                    <StackPanel>
                        <TextBlock Text="Employee Informations" Margin="13" Style="{StaticResource TextBlockLayout}"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,20">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="First Name:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.First_name}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last Name:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.Last_name}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Email:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.Email}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Phone Number:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.Phone_number}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CNP:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.CNP}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Date of Birth:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center" />
                            <DatePicker SelectedDate="{Binding CurrentEmployee.Date_of_birth}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Home Address:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.Home_address}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Department:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentDepartment.Department.Nume}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Post:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Post.Nume}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Base Salary:" FontWeight="Bold" />
                            <TextBox Text="{Binding CurrentEmployee.Base_salary}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Contract Type:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{Binding ContractTypes}" 
                                      SelectedItem="{Binding CurrentEmployee.Contract_type}" 
                                      Width="200" />
                        </StackPanel>

                        
                    </StackPanel>
                </Border>
                <Button x:Name="SaveButton"
                        Content="Save"
                        Command="{Binding SaveCommand}"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Command="{Binding NavigateBackCommand}"
                        CommandParameter="{Binding CurrentDepartment}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>


