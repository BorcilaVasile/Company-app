<UserControl x:Class="Administrare_firma.MVVM.View.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administrare_firma.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#cccccc">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Border BorderThickness="0,0,0,1"
        BorderBrush="#5E5ADB">
                <TextBlock Text="Projects"
             Foreground="#1E1B39"
             FontSize="22"
             HorizontalAlignment="Left"
             VerticalAlignment="Center"
             Margin="25"
             FontFamily="Fonts/Popins"/>
            </Border>
            <TextBlock Text="This page allows you to see the projects"
             Foreground="White"
             Margin="10,5,10,0"/>
        <DataGrid ItemsSource="{Binding Projects}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  Margin="10"
                  CanUserDeleteRows="False" 
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Project ID" 
                                    Binding="{Binding ProjectID}" 
                                    Width="65" />
                <DataGridTextColumn Header="Contractor Company" 
                                    Binding="{Binding ContractorCompany}" 
                                    Width="120" />
                <DataGridTextColumn Header="Duration (months)" 
                                    Binding="{Binding Duration}" 
                                    Width="120" />
                <DataGridTextColumn Header="Expenses" 
                                    Binding="{Binding Expenses, StringFormat={}{0:C}}" 
                                    Width="120" />
                <DataGridTextColumn Header="Start Date" 
                                    Binding="{Binding StartDate, StringFormat={}{0:dd/MM/yyyy}}" 
                                    Width="150" />
                <DataGridTextColumn Header="End Date" 
                                    Binding="{Binding EndDate, StringFormat={}{0:dd/MM/yyyy}}" 
                                    Width="140" />
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
