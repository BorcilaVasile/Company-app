<UserControl x:Class="Administrare_firma.MVVM.View.RequestDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administrare_firma.MVVM.View"
             xmlns:viewmodel="clr-namespace:Administrare_firma.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:RequestDetailsViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="AliceBlue">
        <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Request Details" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       Foreground="DarkBlue" 
                       Margin="0,0,0,10" 
                       HorizontalAlignment="Center" />
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Request Information -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Request ID:" FontWeight="Bold" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentRequest.Request.RequestID}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Request Type:" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentRequest.Request.RequestType}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Requester ID:" FontWeight="Bold" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentRequest.Request.RequesterID}" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Request Date:" FontWeight="Bold" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentRequest.Request.RequestDate, StringFormat=d}" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Duration (days):" FontWeight="Bold" />
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentRequest.Request.DurationDays}" />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Reason:" FontWeight="Bold" />
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentRequest.Request.Reason}" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Explanation:" FontWeight="Bold" />
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentRequest.Request.Explanation}" />

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Status:" FontWeight="Bold" />
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentRequest.Request.Status}" />

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Reviewed By:" FontWeight="Bold" />
                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding CurrentRequest.Request.ReviewedBy}" />

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Review Date:" FontWeight="Bold" />
                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding CurrentRequest.Request.ReviewDate, StringFormat=d}" />

                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Remarks:" FontWeight="Bold" />
                    <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding CurrentRequest.Request.Remarks}" />

                    <TextBlock Grid.Row="11" Grid.Column="0" Text="Project ID:" FontWeight="Bold" />
                    <TextBlock Grid.Row="11" Grid.Column="1" Text="{Binding CurrentRequest.Request.ProjectID}" />
                </Grid>

                <!-- Requester Information -->
                <TextBlock Text="Requester Details" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       Foreground="DarkBlue" 
                       Margin="0,10,0,10" 
                       HorizontalAlignment="Center" />
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Last Name:" FontWeight="Bold" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentRequest.Requester.Last_name}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="First Name:" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentRequest.Requester.First_name}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="CNP:" FontWeight="Bold" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentRequest.Requester.CNP}" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Date of Birth:" FontWeight="Bold" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentRequest.Requester.Date_of_birth, StringFormat=d}" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Home Address:" FontWeight="Bold" />
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentRequest.Requester.Home_address}" />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Phone Number:" FontWeight="Bold" />
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentRequest.Requester.Phone_number}" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Email:" FontWeight="Bold" />
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentRequest.Requester.Email}" />

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Department:" FontWeight="Bold" />
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentRequest.Requester.ID_department}" />

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Post:" FontWeight="Bold" />
                    <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding CurrentRequest.Requester.ID_post}" />

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Base Salary:" FontWeight="Bold" />
                    <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding CurrentRequest.Requester.Base_salary, StringFormat=C}" />
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Accept" 
                            Command="{Binding AcceptCommand}" 
                            CommandParameter="{Binding CurrentRequest}"
                            Width="100" 
                            Height="40"
                            Margin="10" 
                            Background="LightGreen" />
                    <Button Content="Reject" 
                            Command="{Binding RejectCommand}"
                            CommandParameter="{Binding CurrentRequest}"
                            Width="100" 
                            Height="40"
                            Margin="10" 
                            Background="Tomato" />
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}" 
                            Width="100" 
                            Height="40"
                            Margin="10" 
                            Background="LightGray" />
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
