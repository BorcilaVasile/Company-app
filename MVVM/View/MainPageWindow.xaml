<Window x:Class="Administrare_firma.MainPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Administrare_firma.MVVM.ViewModel"
        xmlns:local="clr-namespace:Administrare_firma"
        mc:Ignorable="d"
        Title="MainPageWindow" 
        Height="600" 
        Width="920"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.DataContext>
        <viewModel:MainPageViewModel/>
    </Window.DataContext>
    <Border CornerRadius="15" Background="#81C3D7" BorderBrush="Gray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" 
                    Grid.Row="0" 
                    Background="Transparent" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right">
                <Button Content="-" 
                    Command="{Binding MinimizeCommand}" 
                    Style="{StaticResource MinimizeButtonStyle}"/>
                <Button Content="x" Command="{Binding CloseCommand}" 
                    Style="{StaticResource CloseButtonStyle}" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Border CornerRadius="15">
                    <ContentControl Content="{Binding CurrentView}"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
