<UserControl x:Class="Administrare_firma.MVVM.View.CreateRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.ColumnSpan="2" Text="Create Request" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" />

        <!-- Request Form -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">

            <!-- Request Type -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Request Type:" Width="150" VerticalAlignment="Center" />
                <ComboBox x:Name="RequestType"
                          ItemsSource="{Binding RequestTypeOptions}" 
                          SelectedItem="{Binding RequestType, Mode=TwoWay}"
                          Width="300">
                </ComboBox>
            </StackPanel>

            <!-- Request Date -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Request Date:" Width="150" VerticalAlignment="Center" />
                <DatePicker x:Name="RequestDate" 
                            SelectedDate="{Binding RequestDate, Mode=TwoWay}"
                            Width="300" />
            </StackPanel>

            <!-- Duration Days -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Duration Days:" Width="150" VerticalAlignment="Center" />
                <TextBox x:Name="DurationDays" 
                         Text="{Binding DurationDays, Mode=TwoWay}"
                         Width="300" />
            </StackPanel>

            <!-- Reason -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Reason:" Width="150" VerticalAlignment="Center" />
                <TextBox x:Name="Reason"
                         Text="{Binding Reason, Mode=TwoWay}" 
                         Width="300"  />
            </StackPanel>

            <!-- Explanation -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Explanation:" Width="150" VerticalAlignment="Top" />
                <TextBox x:Name="Explanation"
                         Text="{Binding Explanation, Mode=TwoWay}" 
                         Width="300"
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         Height="100" />
            </StackPanel>

        </StackPanel>

        <!-- Submit and Cancel Buttons -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Submit" Width="100" Margin="0,0,10,0" Command="{Binding SubmitRequestCommand}" />
            <Button Content="Cancel" Width="100" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
