<UserControl x:Class="Administrare_firma.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administrare_firma.MVVM.View"
             xmlns:oxy="http://oxyplot.org/wpf" 
             xmlns:viewmodel="clr-namespace:Administrare_firma.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
             mc:Ignorable="d" >


    <ScrollViewer Style="{StaticResource ScrollViewerLayout}" >
        <StackPanel Orientation="Vertical">
            <Border Style="{StaticResource BorderLayout}">
                <TextBlock Text="Home" Style="{StaticResource TextBlockLayout}"/>
            </Border>
            <StackPanel Orientation="Horizontal"
                    Margin="10">
                <StackPanel Orientation="Horizontal">
                    <oxy:PlotView Model="{Binding ActiveInactiveModel}" Height="300" Width="300"/>
                    <oxy:PlotView Model="{Binding EmploymentTypesModel}" Height="300" Width="300"/>
                </StackPanel>
            </StackPanel>
            <Border Width="400"
                    Height="100"
                    CornerRadius="10"
                    Margin="45,0,0,0">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Learn about our politics"
                            Foreground="White"
                            FontSize="28"
                            Margin="20,10,10,0"/>
                        <TextBlock Text="Click here"
                            Foreground="White"
                            FontSize="18"
                            Margin="20,10,10,0"/>
                    </StackPanel>
                </Grid>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#ffc554 " Offset="0.0"/>
                        <GradientStop Color="#ffb738" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <ListView ItemsSource="{Binding Requests}" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Request.RequestID}" Width="auto"/>
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding Requester.First_name}" Width="auto"/>
                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding Requester.Last_name}" Width="auto"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Request.RequestType}" Width="auto"/>
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Request.Status}" Width="auto"/>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Request.RequestDate, StringFormat=d}" Width="auto"/>
                        <!-- Coloană pentru buton -->
                        <GridViewColumn Header="Details">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Vizualizare Detalii" 
                                Command="{Binding DataContext.ViewRequestDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Request.Status}" Value="Approved">
                                <Setter Property="Background" Value="LightSeaGreen" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Request.Status}" Value="Rejected">
                                <Setter Property="Background" Value="RosyBrown" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Request.Status}" Value="Pending">
                                <Setter Property="Background" Value="Yellow" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>


            <StackPanel>

                <StackPanel.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Margin" Value="15,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Statistics"
                    Foreground="#1E1B39"
                    FontSize="28"
                    Margin="20,10,10,0"/>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Border Width="150"
                            Height="150"
                            Background="#844eff"
                            CornerRadius="100">
                        </Border>
                        <TextBlock Text="Human Resources" 
                               Foreground="#1E1B39"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Border Width="150"
                             Height="150"
                             Background="#4e99ff"
                             CornerRadius="100"/>
                        <TextBlock Text="Sales"
                           Foreground="#1E1B39"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Border Width="150"
                        Height="150"
                        Background="#4eff91"
                        CornerRadius="100"/>
                        <TextBlock Text="Marketing"
                       Foreground="#1E1B39"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Border Width="150"
                         Height="150"
                         Background="#ecff4e"
                         CornerRadius="100"/>
                        <TextBlock Text="Finance"
                           Foreground="#1E1B39"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
