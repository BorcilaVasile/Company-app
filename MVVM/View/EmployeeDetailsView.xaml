<UserControl x:Class="Administrare_firma.MVVM.View.EmployeeDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Administrare_firma.MVVM.ViewModel"
             xmlns:local="clr-namespace:Administrare_firma.MVVM.View" 
             xmlns:viewmodel="clr-namespace:Administrare_firma.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewModel:EmployeeDetailsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <Grid>
        <ScrollViewer Style="{StaticResource ScrollViewerLayout}">
            <StackPanel Orientation="Vertical">
                <Border Style="{StaticResource BorderLayout}">
                    <StackPanel>
                        <Button Content="Go back" 
                                Style="{StaticResource ButtonGoBack}" 
                                Command="{Binding NavigateBackCommand}"
                                CommandParameter="{Binding CurrentDepartment}"/>
                        <TextBlock Text="Employee Informations" Margin="13" Style="{StaticResource TextBlockLayout}"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDDDDD" BorderThickness="1" Margin="0,0,0,20">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="First Name:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.First_name}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last Name:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Last_name}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Email:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Email}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Phone Number:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Phone_number}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CNP:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.CNP}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Date of Birth:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Date_of_birth, StringFormat={}{0:dd MMM yyyy}}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Home Address:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Home_address}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Department:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentDepartment.Department.Nume}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Post:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Post}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Base Salary:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Base_salary}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Contract Type:" FontWeight="Bold" />
                            <TextBlock Text="{Binding CurrentEmployee.Contract_type}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>


